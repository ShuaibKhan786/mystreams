package label 

type Props struct {
	Class    string
	Required bool
	Label    string
}

templ Label(props ...Props) {
	{{
	var p Props
	if len(props) > 0 {
		p = props[0]
	}
	style := "flex flex-col gap-1 "
	style += p.Class
	}}
	<div class={ style }>
		<label class="text-sm font-semibold text-neutral-500 dark:text-neutral-400 pl-1.5">{ p.Label }</label>
		{ children... }
	</div>
}
